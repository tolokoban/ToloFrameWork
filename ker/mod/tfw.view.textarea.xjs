// tfw.view.textarea
{View DIV
  view.attribs: {
    value: {string "" behind: onValueChanged}
    label: {string ""}
    focus: {boolean false}
    visible: {boolean true}
    width: {unit "auto"}
    rows: {integer 5}
    cols: {integer 80}
  }

  class: tfw-view-textarea
  class.focus: {Bind focus} 
  class.|hide: {Bind visible}
  class.thm-bg3: {Bind focus back:false}

  [
    {DIV view.id: head, class: head {Bind label}}
    {DIV view.id: body, class: body
      [
        {TEXTAREA
          view.id: input
          cols: {Bind cols}
          rows: 1
          value: {Bind value}
          focus: {Bind focus}
          placeholder: {Bind label}
          style.width: {Bind width}}
      ]}
    {DIV view.id: foot, class: foot}
    {DIV view.id: bottom, class: "bottom thm-bgS"}
  ]
}